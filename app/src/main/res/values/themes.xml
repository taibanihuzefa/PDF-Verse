    </style>

    <!--    give the background color to the material card view for shadow-->
    <style name="bgShadowMaterialCv" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="strokeColor">@color/pink</item>
        <item name="cardBackgroundColor">@color/black</item>
    </style>


    <!--search view icon style-->
    <style name="SearchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

    <!--    for all the buttons text in the project -->
    <style name="blue_backgroud_button_style_22sp">
        <item name="android:backgroundTint">@color/pink</item>
        <item name="android:fontFamily">@font/poppins_semibold_600</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="input_type_text_layout">
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="endIconTint">@color/pink</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="android:padding">0dp</item>
        <item name="cursorColor">@color/pink</item>
    </style>

</resources>